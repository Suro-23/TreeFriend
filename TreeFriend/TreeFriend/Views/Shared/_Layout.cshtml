<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TreeFriend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Reset.css" />
    <link rel="stylesheet" href="~/css/HomePage.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <a href="@Url.Action("HomePage","Home")">
            <img src="~/icon/Logo.png" alt="" class="logo">
        </a>
        <nav>
            <ul>
                @if (User.IsInRole("Admin")) {
                    <li><a href="@Url.Action("AddCategory","Admin")">管理員</a></li>
                }
                <li><a href="@Url.Action("ProductPage","Home")">講座</a></li>
                <li>提醒</li>
                @{
                    if (Context.User.Identity.IsAuthenticated) {
                        var imgPath = Context.User.Claims.FirstOrDefault(c => c.Type == "Headshot").Value;

                        <li>
                            <a herf="#" class="headshot">
                                <img src="@imgPath" alt="">
                            </a>
                        </li>
                    } else {
                        <li><a href="@Url.Action("Create","Register")">登入</a></li>
                    }
                }
            </ul>
        </nav>
    </header>
    @*<div class="container">
        <main role="main" class="pb-3">*@
    @RenderBody()
    @*</main>
        </div>*@

    @*<footer class="border-top footer text-muted">
        <div class="container">
        &copy; 2022 - TreeFriend - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
