@{
    Layout = "_Member";
}
<link href="~/css/YP/SkillPost.css" rel="stylesheet" />
<div id="app" class="col-12 member-data  d-grid  gap-3">
    <div class="row">
        <select class="w-auto form-select rounded-pill" aria-label="Default select example">
            <option v-for="item in catrgoryList" value="交換技能">交換技能</option>
        </select>
    </div>
    <div class="row">
        <input id="sk-post-title" class="col-5 border-0 rounded-3 fs-4" type="text" placeholder="標題">
    </div>
    <div class="row">
        <input id="sk-post-region" type="text" class="col-3 border-0 rounded-3 fs-4" placeholder="地區">
    </div>
    <div class="row">
        <div class="hashtag-group btn-group" role="group" aria-label="Basic checkbox toggle button group">
            <div class="w-auto">
                <input type="checkbox" class="btn-check" id="btncheck1" autocomplete="off">
                <label class="btn btn-outline-secondary rounded-pill" for="btncheck1">#音樂</label>
            </div>
        </div>
    </div>
    <div class="row">
        <textarea id="sk-post-content" class="border-0 rounded-3 fs-4" rows="8"
                  placeholder="文章內容"></textarea>
    </div>
</div>
<script>
    new Vue({
        el:"#app",
        data:{
            categoryList:[],
            hashtagList:[],
            skillPost:{
                title:"",
                categoryId:"",
                region:"",
                content:"",
                hashtagId:[]
            }
        },
        mounted:function() {
            const self = this;
            axios.get("../Api/Category/GetAllCategory")
            .then(res => self.categoryList = res.data);

            axios.get("../Api/Category/GetAllHashtag")
            .then(res => self.hashtagList = res.data);
        }
    })
</script>